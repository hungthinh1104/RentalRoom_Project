# ============================================================
# PRODUCTION ENVIRONMENT VARIABLES
# ============================================================
# Copy this file to .env.production and fill in real values
# DO NOT commit .env.production to git - it will be in .gitignore
# ============================================================

# ===== APP CONFIG =====
NODE_ENV="production"
PORT=3000

# ===== DATABASE (Supabase / Postgres) =====
# Lấy từ Supabase Console: Settings > Database > Connection String (Pooling)
# Format: postgresql://postgres:[PASSWORD]@db.[PROJECT-ID].supabase.co:5432/postgres?schema=public
DATABASE_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT-ID].supabase.co:5432/postgres?schema=public"

# ===== REDIS (Upstash) =====
# Lấy từ Upstash Console: Database > REST API
REDIS_HOST="dap-xxxx.upstash.io"
REDIS_PORT="6379"
REDIS_PASSWORD="xxxxxx"
REDIS_TTL=3600

# ===== AUTHENTICATION (JWT) =====
# Generate strong keys: openssl rand -hex 32
JWT_SECRET="your-long-secret-key-generated-with-openssl"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_SECRET="your-long-refresh-secret-key-generated-with-openssl"
JWT_REFRESH_EXPIRES_IN="7d"

# ===== CORS CONFIGURATION =====
# Domain frontend của bạn (để tránh lỗi CORS)
# Ví dụ: https://app.yourdomain.com hoặc https://yourapp.vercel.app
CORS_ORIGIN="https://your-frontend-domain.com"

# ===== EMAIL (Gmail SMTP) =====
# Dùng Gmail App Password (không phải password bình thường)
MAIL_HOST="smtp.gmail.com"
MAIL_PORT=587
MAIL_USER="your-email@gmail.com"
MAIL_PASSWORD="your-app-password"
MAIL_FROM="noreply@yourdomain.com"
MAIL_FROM_NAME="Rental Room App"

# ===== AI FEATURE (Google Gemini) =====
# Lấy từ Google Cloud Console: APIs & Services > Credentials
GEMINI_API_KEY="AIzaSy..."

# ===== STORAGE (ImageKit) =====
# Quan trọng cho upload ảnh phòng, hợp đồng
# Lấy từ ImageKit Dashboard: https://imagekit.io
IMAGEKIT_PUBLIC_KEY="public_..."
IMAGEKIT_PRIVATE_KEY="private_..."
IMAGEKIT_URL_ENDPOINT="https://ik.imagekit.io/your_id"

# ===== PAYMENT GATEWAY (SePay) =====
# Lấy từ SePay Dashboard: https://sepay.vn
ENCRYPTION_KEY="your-encryption-key-from-sepay"
SEPAY_API_URL="https://my.sepay.vn/userapi"
SEPAY_API_TOKEN="your-sepay-api-token"
P12_PASSWORD="your-p12-password"
THROTTLE_LIMIT=100
