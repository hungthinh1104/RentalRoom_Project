# ==============================================
# DATABASE
# ==============================================
DATABASE_URL="postgresql://user:password@localhost:5432/rental_room_db"

# ==============================================
# REDIS / CACHE
# ==============================================
REDIS_URL="redis://localhost:6379"
# Or use Upstash Redis (cloud):
# REDIS_URL="rediss://default:xxxxx@xxxxx.upstash.io:6379"

# ==============================================
# JWT & AUTH
# ==============================================
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# ==============================================
# GOOGLE GEMINI AI
# ==============================================
GEMINI_API_KEY="your-gemini-api-key-here"

# ==============================================
# EMAIL (NodeMailer)
# ==============================================
MAIL_HOST="smtp.gmail.com"
MAIL_PORT=587
MAIL_USER="your-email@gmail.com"
MAIL_PASSWORD="your-app-password"
MAIL_FROM="noreply@yourdomain.com"

# ==============================================
# PAYMENT GATEWAY (Sepay)
# ==============================================
SEPAY_API_KEY="your-sepay-api-key"
SEPAY_WEBHOOK_SECRET="your-sepay-webhook-secret"

# ==============================================
# CORS & FRONTEND
# ==============================================
CORS_ORIGIN="http://localhost:3000,https://yourdomain.com"
FRONTEND_URL="http://localhost:3000"

# ==============================================
# MONITORING & LOGGING (Production)
# ==============================================
# Sentry Error Monitoring
# Sign up at https://sentry.io and get your DSN
SENTRY_DSN=""
# Example: SENTRY_DSN="https://xxxxx@o123456.ingest.sentry.io/123456"

# Log Level (error, warn, info, debug, verbose)
LOG_LEVEL="info"

# Better Stack / Logtail (Optional)
# Sign up at https://betterstack.com/logtail
LOGTAIL_TOKEN=""

# ==============================================
# ENVIRONMENT
# ==============================================
NODE_ENV="development"
# Options: development, staging, production

# ==============================================
# SERVER
# ==============================================
PORT=3001

# ==============================================
# AZURE / CLOUD (Optional for deployment)
# ==============================================
AZURE_STORAGE_CONNECTION_STRING=""
AZURE_STORAGE_CONTAINER_NAME="uploads"

# ==============================================
# SECURITY
# ==============================================
# Trust proxy (set to 1 in production behind load balancer)
TRUST_PROXY=0

# Rate limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=100
