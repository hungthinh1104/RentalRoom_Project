# Production Environment Template
# Copy this to .env.production and fill in your values

# ===== DATABASE =====
# Option 1: Supabase (Recommended - Free tier)
DATABASE_URL=postgresql://postgres:[PASSWORD]@db.[PROJECT-ID].supabase.co:5432/postgres

# Option 2: Azure PostgreSQL (Expensive - $50/month)
# DATABASE_URL=postgresql://[USER]@[SERVER]:5432/[DB]?sslmode=require

# ===== REDIS =====
# Option 1: Upstash (Recommended - Free tier)
REDIS_HOST=your-redis.upstash.io
REDIS_PORT=6379
REDIS_PASSWORD=your-upstash-password

# Option 2: Azure Cache for Redis ($16/month)
# REDIS_HOST=your-redis.redis.cache.windows.net
# REDIS_PORT=6380
# REDIS_PASSWORD=your-azure-redis-key

# ===== APPLICATION =====
NODE_ENV=production
PORT=3000
CORS_ORIGIN=https://yourdomain.com

# ===== JWT SECRETS =====
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_ME_GENERATE_WITH_OPENSSL
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=CHANGE_ME_GENERATE_WITH_OPENSSL
JWT_REFRESH_EXPIRES_IN=7d

# ===== EMAIL =====
# Option 1: Gmail SMTP (Free)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=noreply@yourdomain.com
MAIL_FROM_NAME=Rental Room

# Option 2: SendGrid (Free tier: 100 emails/day)
# MAIL_HOST=smtp.sendgrid.net
# MAIL_PORT=587
# MAIL_USER=apikey
# MAIL_PASSWORD=your-sendgrid-api-key

# ===== AI =====
GEMINI_API_KEY=your-gemini-api-key

# ===== CACHE =====
REDIS_TTL=3600

# ===== THROTTLE =====
THROTTLE_TTL=60000
THROTTLE_LIMIT=100
