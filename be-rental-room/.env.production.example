# Production Environment Variables
# Copy this to .env.production and fill in real values

# Node Environment
NODE_ENV=production
PORT=8080

# Database (Google Cloud SQL)
DATABASE_URL="postgresql://postgres:PASSWORD@/rental_room?host=/cloudsql/PROJECT:REGION:INSTANCE&sslmode=require"

# JWT Authentication
JWT_SECRET="generate-with-openssl-rand-hex-32"
JWT_EXPIRES_IN="7d"

# Encryption (for sensitive data)
ENCRYPTION_KEY="generate-with-openssl-rand-hex-32"

# SePay Payment Integration
SEPAY_API_TOKEN="your-sepay-api-token"

# Email Configuration
MAIL_HOST="smtp.gmail.com"
MAIL_PORT="587"
MAIL_USER="your-email@gmail.com"
MAIL_PASSWORD="your-app-password"
MAIL_FROM="noreply@yourapp.com"

# Frontend URL (for CORS)
FRONTEND_URL="https://your-app.vercel.app"
CORS_ORIGIN="https://your-app.vercel.app,https://www.your-app.com"

# Google Cloud Storage
GCS_BUCKET_NAME="rental-room-uploads"
GCS_PROJECT_ID="your-project-id"
GOOGLE_APPLICATION_CREDENTIALS="/home/site/gcp-key.json"

# Redis Cache (optional)
REDIS_URL="redis://localhost:6379"

# Monitoring (optional)
SENTRY_DSN="https://xxx@sentry.io/xxx"
APPLICATIONINSIGHTS_CONNECTION_STRING="InstrumentationKey=xxx"

# ImageKit (for image uploads)
IMAGEKIT_PUBLIC_KEY="your-public-key"
IMAGEKIT_PRIVATE_KEY="your-private-key"
IMAGEKIT_URL_ENDPOINT="https://ik.imagekit.io/your-id"

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=100
